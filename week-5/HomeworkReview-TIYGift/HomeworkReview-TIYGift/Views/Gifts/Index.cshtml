@model IEnumerable<HomeworkReview_TIYGift.Models.Gift>

@{
    ViewBag.Title = "All Gifts";
}

<h2>Index</h2>


@Html.ActionLink()


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Contents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hints)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Width)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Depth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.IsOpened.GetValueOrDefault())
            {
                     @Html.DisplayFor(modelItem => item.Contents)
            }
            else
            {
                <span>****NOT OPENED*****</span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hints)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Height)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Width)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Depth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
         @* <a href="/Gift/Edit?id=3&name=some%20value>Edit this gift</a>*@
            @Html.ActionLink("Edit this Gift", "Edit", new { id=item.Id, name = "some value" });
            @* <a href="/Other/edit/3 data="1" class="a-tag-styling"> Other Controller</a>*@
            @Html.ActionLink("Other controller", "edit", "Other", new { id = item.Id }, new { @class = "a-tag-styling", data = "1" })

            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
           @if (!item.IsOpened.GetValueOrDefault())
           {
            @Html.ActionLink("Open", "Open", new { id = item.Id }) 
           }


        </td>
    </tr>
}

</table>
