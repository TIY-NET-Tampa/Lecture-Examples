@model HomeworkReview_TIYGift.Models.Gift

@{
    ViewBag.Title = "Open";
}

<h2>Open</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div>
            <h4 class="present-header">
                @Html.DisplayFor(model => model.Hints, new { htmlAttributes = new { @class = "form-control" } })
            </h4>
        </div>

        <div>
            <div>dimensions</div>
            <div>
                @Model.Height x @Model.Width x @Model.Depth
            </div>
            <div>
                Weight
            </div>
            <div>
                @Model.Weight
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Open?" class="btn btn-default" />

                <div>
                    @Html.ActionLink("Nevermind", "Index", null, new { @class = "btn btn-default" });
                </div>

            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
