@model ResturantDemo.ViewModels.HomePageViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome to TIY Bistro</h1>
</div>

<div class="row">
    <div class="col-lg-12" id="shoppingCart">
        @Html.Partial("_shoppingCart", Model.ShoppingCart)
    </div>
</div>


@foreach (var cat in Model.Menu)
{
    <div class="row">
        <div class="col-md-12">
            <h2>@cat.Name</h2>
            <ul>
                @foreach (var food in cat.Menu)
                {
                    @Html.Partial("_MenuItem", food)
                }
            </ul>
        </div>
    </div>
}
